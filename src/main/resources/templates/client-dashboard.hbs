{{#partial "content"}}

    <div class="place-cards rowa">
        {{#each cleaners}}
            <a href="/cleaner/profile/{{id}}">
                <div class="w3-container column">
                    <div class="w3-card-4" style="width: 70%">
                        <header class="w3-container w3-light-grey">
                            <h3><img
                                    src="https://i.pravatar.cc/100"  height="100px" width="100px"
                                    alt="Avatar"
                                    class="w3-left w3-circle w3-margin-right"
                            />{{cleanerName}}</h3>
                            <p class="text-muted"><i class="fa fa-phone" aria-hidden="true"></i> {{cleanerPhone}}</p>
                        </header>
                        <div class="w3-container">
                            <p>
                                {{cleanerBio}}
                            </p>
                            {{#if status}}
                                <h3>This Cleaner is currently working</h3>
                            {{else}}
                                <a href="/cleaner/hire/{{id}}" class="btn btn-danger align-center">Hire Me</a>
                            {{/if}}

                            {{#if message}}
                                <script>
                                    alert({{message}});
                                </script>
                            {{/if}}



                        </div>

                    </div>
                </div>
            </a>
        {{/each}}
    </div>

    </div>

{{/partial}}
{{> "layout.hbs"}}

